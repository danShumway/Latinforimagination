<div
<div class="center" id="banner">
	<div id="navigation">

		<div class="links">
			<div class="link"><a href="/" class="menuItem">Home</a></div>
			<div class="link"><a href="/piglet/" class="menuItem">Piglet</a></div>
			<div class="link"><a href="/halloweentouch" class="menuItem">Halloween Touch</a></div>
			<div class="link"><a href="/swapcounter" class="menuItem">Swap Counter</a></div>
		</div>

		<!--This should only appear if the user is logged in.-->
		{{#if loggedIn }}
		<div class="side_container">
		Hello, {{username}}! <br>
		<a href="/logout">logout</a>
		</div>
		{{else}}
		<div class="side_container">
			<form name="login" method="post" action="/login" id="login" required>
				<input name="username" placeholder="Username" size="10"><br>
				<input type="password" name="password" placeholder="Password" size="10" required>
				<input type="submit" value="Login"><br>
				<span>New?  <a href="/signup">Signup!</a></span>
			</form>
		</div>

		<script>
			var form = document.forms["login"];

			$("#login").submit(function (e) {
				e.preventDefault();

				console.log('sending login');
				var data = {
					username:form.elements["username"].value,
					password:form.elements["password"].value
				};

				$.post("/login", data).done(function (response) {
					if(response !== 'success') {
						alert("Incorrect username or password");
					} else {
						window.location.reload();
					}
				});
			});
		</script>
		{{/if}}

	</div>
</div>